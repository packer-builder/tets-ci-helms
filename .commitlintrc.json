{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "build",
        "ci",
        "chore",
        "revert"
      ]
    ],
    "scope-enum": [
      1,
      "always",
      []
    ],
    "scope-empty": [0, "never"],
    "subject-case": [0, "never"],
    "body-max-line-length": [0, "always"],
    "footer-max-line-length": [0, "always"]
  },
  "helpUrl": "https://www.conventionalcommits.org/"
}
